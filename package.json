{
	"name": "storelocatorjs",
	"version": "3.0.2",
	"description": "Storelocatorjs is a fast and lightweight Javascript library for build your own customizable store locator with a minimalist theme",
	"keywords": [],
	"homepage": "https://yoriiis.github.io/storelocatorjs",
	"bugs": "https://github.com/yoriiis/storelocatorjs/issues",
	"repository": "https://github.com/yoriiis/storelocatorjs.git",
	"author": "Yoriiis aka Joris Daniel (joris.daniel@gmail.com)",
	"main": "dist/storelocator/js/storelocator.js",
	"scripts": {
		"build": "rm -rf ./dist/ && webpack --mode=production",
		"build:jsdoc": "jsdoc --configure ./jsdoc.json",
		"build:mkdocs": "rm -rf ./site/ && npm run build && npm run build:mkdocs:only && npm run create:demo",
		"build:mkdocs:only": "mkdocs build",
		"create:demo": "cp -rv ./dist/. ./site/dist/",
		"start": "rm -rf ./dist/ && webpack --mode=development",
		"test:eslint": "eslint -c ./.eslintrc.js ./src/ ./server/src/",
		"test:stylelint": "stylelint './src/**/*.css' './docs/theme/assets/stylesheets/**/*.css' --config ./stylelint.config.js"
	},
	"devDependencies": {
		"@babel/core": "7.4.5",
		"@babel/plugin-transform-modules-commonjs": "7.7.0",
		"@babel/preset-env": "7.4.5",
		"babel-eslint": "8.0.1",
		"babel-loader": "8.0.6",
		"css-loader": "1.0.0",
		"eslint": "4.18.2",
		"eslint-config-standard": "10.2.1",
		"eslint-plugin-import": "2.8.0",
		"eslint-plugin-node": "5.2.1",
		"eslint-plugin-promise": "3.6.0",
		"eslint-plugin-standard": "3.0.1",
		"expose-loader": "0.7.5",
		"file-loader": "1.1.11",
		"jsdoc": "3.6.3",
		"mini-css-extract-plugin": "0.4.1",
		"optimize-css-assets-webpack-plugin": "5.0.1",
		"postcss-custom-media": "7.0.8",
		"postcss-import": "11.0.0",
		"postcss-loader": "2.1.6",
		"postcss-nested": "3.0.0",
		"postcss-preset-env": "6.7.0",
		"prettier-eslint": "9.0.1",
		"prettier-stylelint": "0.4.2",
		"progress-bar-webpack-plugin": "1.11.0",
		"style-loader": "0.21.0",
		"stylefmt": "6.0.3",
		"stylelint": "10.1.0",
		"stylelint-config-recommended": "3.0.0",
		"stylelint-config-standard": "18.3.0",
		"svg-inline-loader": "0.8.0",
		"terser-webpack-plugin": "2.2.1",
		"webpack": "4.41.2",
		"webpack-cli": "3.2.3",
		"webpack-manifest-plugin": "2.0.3"
	},
	"engines": {
		"node": "8.11.2",
		"npm": "5.6.0"
	}
}
